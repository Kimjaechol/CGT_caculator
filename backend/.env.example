# Google Gemini API Key
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend URL for CORS (Vercel domain)
FRONTEND_URL=https://cgt-caculator.vercel.app

# Port (Railway sets this automatically)
PORT=8000

# Kakao OAuth Settings
# Get your keys from: https://developers.kakao.com
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
KAKAO_REDIRECT_URI=https://cgt-caculator.vercel.app/callback

# JWT Settings
JWT_SECRET_KEY=your_jwt_secret_key_here

# Admin Settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin1234

# Database Paths (Railway uses /tmp)
DB_PATH=/tmp/tax_knowledge.db
USER_DB_PATH=/tmp/users.db

# Kakao Alimtalk/Message Settings (for consultation notifications)
# Get your admin key from: https://developers.kakao.com
KAKAO_ADMIN_KEY=your_kakao_admin_key
KAKAO_SENDER_KEY=your_kakao_sender_key
KAKAO_TEMPLATE_CODE=consultation_request
ADMIN_PHONE=010-0000-0000
